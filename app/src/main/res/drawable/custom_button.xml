
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="false">
    <shape android:shape="rectangle">
        <solid android:color="#00000000"/>
        <stroke android:width="1dp" android:color="@color/colorLogoBackground" />
        <!--corners allow us to make the rounded corners button-->
        <corners android:radius="200dp" />

    </shape>
</item>

<item android:color="@color/Black" android:state_pressed="true">


    <shape android:shape="rectangle">

        <solid android:color="#00000000" />
        <stroke android:color="@color/colorLogoBackground" android:width="3dp"
            />
        <!--corners allow us to make the rounded corners button-->
        <corners android:radius="150dp" />

    </shape>
</item>
</selector>